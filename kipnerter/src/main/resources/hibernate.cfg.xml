<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<!-- SQL dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

		<property name="hibernate.hbm2ddl.auto">update</property>

		<!-- Connection properties -->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="hibernate.connection.pool_size">100</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">false</property>

		<!-- List of persistent classes -->
		<mapping
			class="edu.ncsu.csc.itrust2.models.persistent.LogEntry" />
		<mapping class="edu.ncsu.csc.itrust2.models.persistent.User" />
		<mapping
			class="edu.ncsu.csc.itrust2.models.persistent.Personnel" />
		<mapping
			class="edu.ncsu.csc.itrust2.models.persistent.PasswordResetToken" />
		<mapping
			class="edu.ncsu.csc.itrust2.models.persistent.LoginAttempt" />
		<mapping
			class="edu.ncsu.csc.itrust2.models.persistent.LoginLockout" />
		<mapping
			class="edu.ncsu.csc.itrust2.models.persistent.LoginBan" />

	</session-factory>
</hibernate-configuration>